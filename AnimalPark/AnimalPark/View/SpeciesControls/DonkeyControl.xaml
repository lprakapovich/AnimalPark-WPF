<UserControl x:Class="AnimalPark.View.SpeciesControls.DonkeyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnimalPark.View.SpeciesControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
           <GroupBox Header="Donkey characteristics">
               <Grid>
                   <Grid.ColumnDefinitions>
                       <ColumnDefinition Width="*"/>
                       <ColumnDefinition Width="*"/>
                   </Grid.ColumnDefinitions>

                   <Label Grid.Column="0" Content="Stubbornness"/>
                   <TextBox Grid.Column="1" Text="{Binding Stubbornness}"></TextBox>
            </Grid>
           </GroupBox> 
    </Grid>
</UserControl>
