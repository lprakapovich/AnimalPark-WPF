<UserControl x:Class="AnimalPark.View.CategoriesControls.BirdControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnimalPark.View.CategoriesControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        

        <Label Grid.Column="1" Content="{Binding IsSaltWater, UpdateSourceTrigger=PropertyChanged}"/>
        <CheckBox Grid.Column="0" Content="Is a salt water?" IsChecked="{Binding IsSaltWater, UpdateSourceTrigger=PropertyChanged}"/>


    </Grid>
</UserControl>
